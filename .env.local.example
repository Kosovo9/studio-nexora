t# ============================================
# Studio Nexora - Environment Configuration
# 10000x Optimized Version with All Integrations
# ============================================

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/studio_nexora"

# ============================================
# CLERK AUTHENTICATION (Primary Auth)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# ============================================
# SUPABASE (Database + Storage)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================
# REPLICATE AI (Image Processing)
# ============================================
REPLICATE_API_TOKEN="r8_your_replicate_api_token"

# ============================================
# STRIPE PAYMENT (Primary Payment Processor)
# ============================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs
STRIPE_PRICE_BASIC="price_basic_id"
STRIPE_PRICE_PRO="price_pro_id"
STRIPE_PRICE_VIP="price_vip_id"

# ============================================
# LEMON SQUEEZY (Alternative Payment + SSN Support)
# ============================================
LEMON_SQUEEZY_API_KEY="your_lemon_squeezy_api_key"
LEMON_SQUEEZY_STORE_ID="your_store_id"
LEMON_SQUEEZY_WEBHOOK_SECRET="your_webhook_secret"

# Lemon Squeezy Variant IDs
LEMON_SQUEEZY_VARIANT_BASIC="variant_basic_id"
LEMON_SQUEEZY_VARIANT_PRO="variant_pro_id"
LEMON_SQUEEZY_VARIANT_VIP="variant_vip_id"

# ============================================
# OXXO PAYMENTS (Mexico Cash Payments)
# ============================================
# Uses Stripe - no additional keys needed
# OXXO is enabled through Stripe payment methods

# ============================================
# AWS S3 (Optional - Image Storage Backup)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="studio-nexora-images"

# ============================================
# FIREBASE (Mobile App - Push Notifications)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY="your_firebase_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"
FIREBASE_ADMIN_SDK_KEY="your_firebase_admin_sdk_json_key"

# ============================================
# EMAIL SERVICE (SendGrid, Resend, or Postmark)
# ============================================
EMAIL_SERVICE="sendgrid"
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
EMAIL_FROM="noreply@studionexora.com"
EMAIL_FROM_NAME="Studio Nexora"

# Alternative: Resend
# RESEND_API_KEY="re_your_resend_api_key"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX_REQUESTS="10"
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"
NODE_ENV="development"

# ============================================
# ANALYTICS & MONITORING
# ============================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your_vercel_analytics_id"
SENTRY_DSN="https://your_sentry_dsn"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# ============================================
# SOCIAL MEDIA INTEGRATION
# ============================================
TWITTER_API_KEY="your_twitter_api_key"
TWITTER_API_SECRET="your_twitter_api_secret"
FACEBOOK_APP_ID="your_facebook_app_id"
INSTAGRAM_ACCESS_TOKEN="your_instagram_access_token"

# ============================================
# CDN & OPTIMIZATION
# ============================================
NEXT_PUBLIC_CDN_URL="https://cdn.studionexora.com"
CLOUDFLARE_API_TOKEN="your_cloudflare_api_token"
CLOUDFLARE_ZONE_ID="your_zone_id"

# ============================================
# SECURITY
# ============================================
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key-min-32-chars"
CSRF_SECRET="your-csrf-secret-key"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_OXXO_PAYMENTS="true"
ENABLE_LEMON_SQUEEZY="true"
ENABLE_MOBILE_APP="true"
ENABLE_SOCIAL_SHARING="true"
ENABLE_ANALYTICS="true"
ENABLE_BETA_FEATURES="false"

# ============================================
# MOBILE APP (Flutter)
# ============================================
MOBILE_API_VERSION="v2"
MOBILE_MIN_VERSION="2.0.0"
MOBILE_FORCE_UPDATE="false"

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET="your-webhook-secret-key"
CLERK_WEBHOOK_SECRET="whsec_your_clerk_webhook_secret"

# ============================================
# LOCALIZATION
# ============================================
DEFAULT_LOCALE="es"
SUPPORTED_LOCALES="es,en,pt,fr,de,it,ja,ko,zh,ar"

# ============================================
# PERFORMANCE
# ============================================
ENABLE_CACHE="true"
CACHE_TTL="3600"
ENABLE_IMAGE_OPTIMIZATION="true"
IMAGE_QUALITY="85"

# ============================================
# DEVELOPMENT
# ============================================
DEBUG_MODE="false"
LOG_LEVEL="info"
ENABLE_PROFILING="false"

# ============================================
# PRODUCTION OVERRIDES
# ============================================
# Uncomment and set these for production:
# NODE_ENV="production"
# NEXT_PUBLIC_APP_URL="https://studionexora.com"
# DEBUG_MODE="false"
# LOG_LEVEL="error"
